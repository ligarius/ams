{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/app/*": [
        "src/app/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/lib/auth/*": [
        "src/lib/auth/*"
      ],
      "@/lib/*": [
        "src/lib/*",
        "../../src/lib/*"
      ],
      "@/theme": [
        "src/theme"
      ],
      "@/styles/*": [
        "src/styles/*"
      ],
      "@/config/*": [
        "src/config/*",
        "../../src/config/*"
      ],
      "@/utils/*": [
        "src/utils/*",
        "../../src/utils/*"
      ],
      "@/services/*": [
        "src/services/*",
        "../../src/services/*"
      ],
      "@/middleware/*": [
        "src/middleware/*",
        "../../src/middleware/*"
      ],
      "@/routes/*": [
        "src/routes/*",
        "../../src/routes/*"
      ],
      "@/server": [
        "src/server",
        "../../src/server"
      ],
      "@backend/*": [
        "../../src/*"
      ]
    },
    "types": [
      "node"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
